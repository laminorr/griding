# =============================
# App
# =============================
APP_NAME="Grid Trading Bot"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Asia/Tehran
APP_URL=https://your-domain.com

APP_LOCALE=fa
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fa_IR

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

# =============================
# Logging
# =============================
LOG_CHANNEL=stack
LOG_STACK=laravel,trading,nobitex,queue,scheduler
LOG_DEPRECATIONS_CHANNEL=null

LOG_LEVEL=info
LOG_DAYS=14

LOG_TRADING_LEVEL=info
LOG_TRADING_DAYS=30

LOG_NOBITEX_LEVEL=warning
LOG_NOBITEX_DAYS=30

LOG_QUEUE_LEVEL=warning
LOG_QUEUE_DAYS=14

LOG_SCHEDULER_LEVEL=info
LOG_SCHEDULER_DAYS=14

LOG_KEEP_DAYS=30
LOG_ROTATE_THRESHOLD_MB=10

# =============================
# Database (MySQL)
# =============================
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# =============================
# Sessions / Queue / Cache
# =============================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

QUEUE_CONNECTION=database
QUEUE_RETRY_AFTER=90
QUEUE_WORKER_TIMEOUT=300
QUEUE_NAME=default

CACHE_DRIVER=database
CACHE_STORE=database
CACHE_PREFIX=

# =============================
# Mail
# =============================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"

# =============================
# Nobitex API Configuration
# =============================
# دریافت API Key از: https://nobitex.ir/app/api-keys
NOBITEX_API_KEY=your_nobitex_api_key_here
NOBITEX_BASE_URL=https://apiv2.nobitex.ir
NOBITEX_TESTNET_URL=https://testnetapiv2.nobitex.ir
NOBITEX_USE_TESTNET=false

# HTTP & Retry/Backoff
NOBITEX_HTTP_TIMEOUT=8.0
NOBITEX_HTTP_CONNECT_TIMEOUT=5.0
NOBITEX_RETRY_MAX_ATTEMPTS=3
TRADING_BACKOFF_INITIAL_MS=500
TRADING_BACKOFF_MAX_MS=4000
TRADING_BACKOFF_FACTOR=2.0
TRADING_BACKOFF_JITTER_MS=250

# Rate limit
TRADING_RATE_LIMIT_TOKENS=1
TRADING_RATE_LIMIT_WINDOW_SECONDS=2

# =============================
# Grid Trading Defaults
# =============================
GRID_DEFAULT_CAPITAL=100000000
GRID_DEFAULT_ACTIVE_PERCENT=30
GRID_DEFAULT_SPACING=1.5
GRID_DEFAULT_LEVELS=10

GRID_MAX_ACTIVE_PERCENT=80
GRID_DEFAULT_STOP_LOSS=15
GRID_MAX_DRAWDOWN=25

GRID_FEE_RATE=0.35

# =============================
# Trading Configuration
# =============================
TRADING_EXCHANGE_FEE_BPS=35
TRADING_SLIPPAGE_BPS=10
TRADING_MIN_ORDER_VALUE_IRT=3000000
TRADING_SYMBOLS_ALLOWED=BTCIRT,ETHIRT,USDTIRT

# =============================
# Scheduler / Simulation
# =============================
TRADING_ENABLE_SCHEDULER=true
TRADING_SIMULATION_MODE=false

# =============================
# Monitoring & Security
# =============================
SLACK_BOT_USER_OAUTH_TOKEN=
SLACK_BOT_USER_DEFAULT_CHANNEL=
ALERT_EMAIL=admin@example.com

ADMIN_IP_WHITELIST=127.0.0.1,::1
ADMIN_2FA_ENABLED=false

# =============================
# Cache Durations (seconds)
# =============================
TRADING_PRICE_TTL_SECONDS=30
TRADING_BALANCE_TTL_SECONDS=60
MARKET_STATS_CACHE_DURATION=300
PRICE_CACHE_DURATION=30
BALANCE_CACHE_DURATION=60

# =============================
# WebSocket
# =============================
WEBSOCKET_ENABLED=true
WEBSOCKET_URL=wss://ws.nobitex.ir/connection/websocket

# =============================
# Backup / Recovery
# =============================
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
EXPORT_ENCRYPTION_KEY=